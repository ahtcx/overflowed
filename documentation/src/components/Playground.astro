---
import { Code } from "astro/components";
import { Resizable } from "./Resizable";
import prettier from "prettier/standalone";
import babylon from "prettier/parser-babel";

export interface Props {
	children: any;
	lang: string;
	source?: string;
}

const { lang, source } = Astro.props;

const DOCS_HIDDEN_REGEX = /\/\/\s?@docs-line-hidden\n(.*)\n/g;
const TWO_MANY_NEWLINE_REGEX = /(\n(\s+)?){2,}\n/g;
---

<div class="container">
	<Resizable axis="horizontal" client:load>
		<div class="sandbox">
			<slot />
		</div>
	</Resizable>
	{
		source && (
			<details class="source">
				<summary>Source code</summary>
				<Code
					code={prettier.format(source.replace(DOCS_HIDDEN_REGEX, "").replace(TWO_MANY_NEWLINE_REGEX, "\n\n"), {
						parser: "babel",
						plugins: [babylon],
						printWidth: 120,
					})}
					lang={lang}
					theme="github-dark"
				/>
			</details>
		)
	}
</div>
<style>
	:root {
		--bg-color: hsl(0, 0%, 0%);
		--line-color-thick: hsl(0, 0%, 25%);
		--line-color-thin: hsl(0, 0%, 10%);
		--line-thick-size: 1px;
		--line-thin-size: 1px;
		--thick-interval: 64px;
		--thin-interval: 8px;
	}

	.sandbox {
		position: relative;

		border-radius: 8px;
		box-shadow: 0 0 0 2px hsla(0, 0%, 100%, 0.15);

		background-color: var(--bg-color);
		background-image: conic-gradient(
				at calc(100% - var(--line-thick-size)) calc(100% - var(--line-thick-size)),
				var(--line-color-thick) 270deg,
				#0000 0
			),
			conic-gradient(
				at calc(100% - var(--line-thin-size)) calc(100% - var(--line-thin-size)),
				var(--line-color-thin) 270deg,
				#0000 0
			);
		background-size: var(--thick-interval) var(--thick-interval), var(--thin-interval) var(--thin-interval);
		background-position: 8px 8px;

		overflow: hidden;
	}

	.source {
		margin-block-start: 8px;
	}
</style>
